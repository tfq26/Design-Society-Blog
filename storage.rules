rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files, so anyone can see profile pictures.
    match /{allPaths=**} {
      allow read;
    }

    // Allow a user to write to their own profile picture directory.
    match /profile-pictures/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow a user to write to their own banners directory.
    match /banners/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload to the posts directory
    match /posts/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
